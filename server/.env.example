# Backend Environment Variables
# Copy this file to .env and update with your actual values

# Server Configuration
PORT=4500
NODE_ENV=development

# Database Configuration
# For local MongoDB:
MONGODB_URI=mongodb://localhost:27017/role-based-task-management

# For MongoDB Atlas (cloud):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/role-based-task-management

# JWT Configuration
# Use a strong, random string (minimum 32 characters recommended)
JWT_SECRET=your-secure-secret-key-change-this-in-production

# CORS Configuration
FRONTEND_URL=http://localhost:5173
# CORS Configuration (comma-separated allowed origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:5176,http://localhost:5177

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=7d

# API Configuration
API_PREFIX=/api
API_TIMEOUT=30000

# Logging
LOG_LEVEL=debug
